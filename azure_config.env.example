# Azure OpenAI Configuration
# Copy this file to azure_config.env and fill in your actual values

# Your Azure OpenAI endpoint (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Your Azure API Key
OPENAI_API_KEY=your_api_key_here

# Your deployment name (e.g., gpt-4o-deployment)
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# API Version (optional, defaults to 2024-02-15-preview)
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Optional: Model name override
OPENAI_MODEL=gpt-4o
